@model ResetPasswordInputModel

@{
    ViewData["Title"] = "Reset password";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-controller="Account" asp-action="ResetPassword" method="post">
            <h2>Reset your password.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Email"/>
            <input type="hidden" asp-for="@Model.Token"/>
            <div class="form-floating">
                <input asp-for="@Model.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" required/>
                <label asp-for="@Model.NewPassword"></label>
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.ConfirmNewPassword" class="form-control" autocomplete="new-password" aria-required="true" required/>
                <label asp-for="@Model.ConfirmNewPassword"></label>
                <span asp-validation-for="@Model.ConfirmNewPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
