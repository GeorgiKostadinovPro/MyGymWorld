@model EnterEmailInputModel

@{
    ViewData["Title"] = "Enter your email";
}

<div class="row">
   <div class="col-md-4">
       <section>
           <form id="account" method="post">
               <h2>Enter your email address.</h2>
               <hr />
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-floating">
                   <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                   <label asp-for="@Model.Email" class="form-label"></label>
                   <span asp-validation-for="@Model.Email" class="text-danger"></span>
               </div>
               <div>
                   <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Send me reset email</button>
               </div>
           </form>
       </section>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}