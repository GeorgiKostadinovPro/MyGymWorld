@model EditUserInputModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row">
    <div class="col-md-4">
        <form id="editForm" asp-controller="User" asp-action="Edit" method="post" enctype="multipart/form-data">
            <h2>Edit Your Profile</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input id="userId" type="hidden" asp-for="@Model.Id"/>
            <div class="form-floating">
                <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.UserName"></label>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.Email"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.FirstName" class="form-control" autocomplete="first name" aria-required="true" />
                <label asp-for="@Model.FirstName"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.LastName" class="form-control" autocomplete="last name" aria-required="true" />
                <label asp-for="@Model.LastName"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="phone number" aria-required="true" />
                <label asp-for="@Model.PhoneNumber">+(country code)-(phone number)</label>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-9 pe-5">
               <div class="small text-muted mt-2">
                    Upload your Profile Picture
                </div>
              <input asp-for="@Model.ProfilePicture" class="form-control form-control-lg" id="formFileLg"/>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Address" id="address" class="form-control" autocomplete="address" aria-required="true" />
                <label asp-for="@Model.Address"></label>
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <select asp-for="@Model.CountryId" asp-items="@Model.CountriesSelectList" id="countries" class="form-select">
                    <option value="None">-- Please Select A Country --</option>
                </select>
                <span asp-validation-for="@Model.CountryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <select asp-for="@Model.TownId" asp-items="@Model.TownsSelectList" id="towns" class="form-select" disabled>
                    <option value="None">-- Please Select A Town --</option>
                </select>
                <span asp-validation-for="@Model.TownId" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save Changes</button>
        </form>
    </div>
</div> 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

