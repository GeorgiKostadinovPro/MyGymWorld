<h1 style="color: #2c3142;">Welcome to MyGymWorld!</h1>
<p style="color: #2c3142; font-size: 30px;">Go to <a asp-controller="Gym" asp-action="All">All Gyms</a> to visit all the gyms in the app and filter them by your choice.</p>

@*Pure CSS Slider*@

<div id="slider1" class="csslider">
    <input type="radio" name="slides" id="slides_1" />
    <input type="radio" name="slides" id="slides_2" checked />
    <input type="radio" name="slides" id="slides_3" />
    <input type="radio" name="slides" id="slides_4" />
    <ul>
        @foreach (DisplayGymViewModel gym in Model.Gyms)
        {
            <li>
                <div class="bg-image" style="background-image: url('@gym.LogoUri');
                       background-size: cover;
                       color: white;
                       filter: blur(3px);
                       -webkit-filter: blur(3px);
                       height: 100%;
                        background-position: center;
                        background-repeat: no-repeat;"></div>
                <div class="bg-text" style="background-color: rgb(0,0,0);
                            background-color: rgba(0,0,0, 0.4);
                            color: white;
                            font-weight: bold;
                            border: 3px solid #f1f1f1;
                            position: absolute;
                            top: 50%;
                            left: 50%;
                            transform: translate(-50%, -50%);
                            z-index: 2;
                            width: 80%;
                            padding: 20px;
                            text-align: center;">
                    <h1>@gym.Name</h1>
                    <p style="font-size: 20px;">Created On - @gym.CreatedOn</p>
                </div>
            </li>
        }
    </ul>
    <div class="arrows">
        @for (int i = 0; i < Model.Gyms.Count(); i++)
        {
            <label for="slides_@(i + 1)"></label>
        }
    </div>
    <div class="navigation">
        <div>
            @for (int i = 0; i < Model.Gyms.Count(); i++)
            {
                <label for="slides_@(i + 1)"></label>
            }
        </div>
    </div>
</div>

